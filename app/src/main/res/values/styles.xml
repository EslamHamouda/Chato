<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="input_layout">
        <item name="android:layout_width">@dimen/input_field_width</item>
        <item name="android:layout_height">@dimen/input_field_height</item>
        <item name="android:background">@drawable/round</item>
        <item name="android:elevation">@dimen/elevation</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/field_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/field_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/field_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/field_corner_radius</item>
        <item name="boxStrokeWidth">@dimen/dimen_0dp</item>
        <item name="boxStrokeWidthFocused">@dimen/dimen_0dp</item>
    </style>

    <style name="input_label">
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:alpha">0.4</item>
        <item name="android:layout_marginStart">@dimen/input_label_margin_start</item>
        <item name="android:layout_marginBottom">@dimen/input_label_margin_bottom</item>
        <item name="android:textColor">@color/almost_black</item>
    </style>

    <style name="input_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/almost_black</item>
        <item name="android:textSize">@dimen/input_text_size</item>
    </style>

    <style name="google_signIn_button">
        <item name="android:layout_width">99.67dp</item>
        <item name="android:layout_height">@dimen/google_button_height</item>
        <item name="android:background">@drawable/round</item>
        <item name="android:backgroundTint">@color/google_green</item>
    </style>

    <style name="main_button">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="backgroundTint">@null</item>
        <item name="android:layout_width">@dimen/dimen_0dp</item>
        <item name="android:layout_height">@dimen/input_field_height</item>
        <item name="android:background">@drawable/blue_gradient</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="header_text">
        <item name="android:layout_marginTop">@dimen/header_margin_top</item>
        <item name="android:textColor">@color/almost_black</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="secondary_option">
        <item name="android:alpha">0.4</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/almost_black</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="text_label">
        <item name="android:textColor">@color/almost_black</item>
        <item name="android:textSize">@dimen/label_text_size</item>
    </style>

    <style name="or_line">
        <item name="android:layout_height">1dp</item>
        <item name="android:alpha">0.1</item>
        <item name="android:background">@color/almost_black</item>
    </style>
</resources>